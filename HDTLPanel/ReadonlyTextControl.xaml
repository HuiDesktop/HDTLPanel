<UserControl x:Class="HDTLPanel.ReadonlyTextControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HDTLPanel"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="400" Height="25">
    <Grid Height="25" VerticalAlignment="Top" d:DataContext="{d:DesignInstance {x:Type local:ReadonlyTextControl}, IsDesignTimeCreatable=True}" Margin="0">
        <Label x:Name="PromptTextBox" Content="{Binding Path=Text}" Margin="10,0,0,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
