<UserControl x:Class="HDTLPanel.ButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HDTLPanel"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="400" Height="50">
    <Grid Height="50" VerticalAlignment="Top" d:DataContext="{d:DesignInstance {x:Type local:ButtonControl}, IsDesignTimeCreatable=True}" Margin="0">
        <Button Content="{Binding Path=PromptText}" Margin="14,6,10,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label x:Name="HintTextBox" Content="{Binding Path=HintText}" Margin="10,25,10,0" VerticalAlignment="Top" Foreground="#FF555555"/>
        <Border BorderBrush="DimGray" BorderThickness="0, 1, 0, 0"/>
    </Grid>
</UserControl>
